<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingVertical="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Short dress"
            android:fontFamily="@font/tt_norms_bold"
            android:textSize="20dp"
            android:textColor="@color/hitam222"
            android:gravity="center"
            >
        </TextView>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/detailImg"
                    android:layout_width="275dp"
                    android:layout_height="match_parent"
                    >
                </ImageView>

                <ImageView
                    android:id="@+id/detailImg2"
                    android:layout_width="290dp"
                    android:layout_height="400dp"
                    >
                </ImageView>

                <ImageView
                    android:id="@+id/detailImg3"
                    android:layout_width="275dp"
                    android:layout_height="400dp"
                    >
                </ImageView>


            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="180dp"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:src="@drawable/rectangle_5"
                android:layout_gravity="center"
                android:layout_marginTop="115dp"
                >
            </ImageView>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/ProgressBarDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_bar_bg"
            android:progress="0"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            tools:visibility="visible"
            android:layout_marginTop="240dp"
            />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/abu2"
        android:paddingVertical="15dp"
        >

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:src="@drawable/rectangle_6">

            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_v"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="110dp"
                >
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textColor="@color/hitam222"
                android:fontFamily="@font/tt_norms_regular"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                >
            </TextView>

        </FrameLayout>

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:src="@drawable/rectangle_6">

            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_v"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="110dp"
                >
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Black"
                android:textColor="@color/hitam222"
                android:fontFamily="@font/tt_norms_regular"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                >
            </TextView>

        </FrameLayout>

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="53dp"
                android:src="@drawable/background_love"
                android:layout_marginTop="5dp"
                >

            </ImageView>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/love_selector"
                android:layout_marginTop="21dp"
                >
            </ImageView>

        </FrameLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/abu2"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                >

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detailBrand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tt_norms_regular"
                        android:textColor="@color/hitam222"
                        android:textStyle="bold"
                        android:textSize="28dp">
                    </TextView>

                    <TextView
                        android:id="@+id/detailName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Short black dress"
                        android:textColor="@color/abu"
                        android:fontFamily="@font/tt_norms_regular"
                        android:textSize="15dp">
                    </TextView>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rating_5_stars">
                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/detailPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:fontFamily="@font/tt_norms_regular"
                        android:textColor="@color/hitam222"
                        android:textStyle="bold"
                        android:paddingRight="20dp"
                        android:textSize="24dp"
                        >
                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:background="@color/abu2"
                >
                <TextView
                    android:id="@+id/detailDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/hitam222"
                    android:fontFamily="@font/tt_norms_regular">

                </TextView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="30dp"
            android:background="@color/abu2"
            >

            <Button
                android:id="@+id/btnDetail"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:text="ADD TO CART"
                android:backgroundTint="@color/primary"
                android:textSize="14dp"
                android:fontFamily="@font/tt_norms_regular"
                android:textStyle="bold"
                android:layout_gravity="center">
            </Button>


        </LinearLayout>

    </LinearLayout>

</ScrollView>