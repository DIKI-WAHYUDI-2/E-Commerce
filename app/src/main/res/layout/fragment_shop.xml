<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.shop.ShopFragment"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/hitam222"
                    android:text="Categories"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:fontFamily="@font/tt_norms_bold">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:id="@+id/llWomen"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/abu2"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/hitam222"
                        android:text="Women"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="@font/tt_norms_bold"
                        android:paddingVertical="8dp"
                        >
                    </TextView>

                    <ImageView
                        android:id="@+id/recWomen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rectangle_2"
                        android:visibility="visible"
                        >
                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMen"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/abu2"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/hitam222"
                        android:text="Men"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="@font/tt_norms_bold"
                        android:paddingVertical="8dp"
                        >
                    </TextView>

                    <ImageView
                        android:id="@+id/recMen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rectangle_2"
                        android:visibility="gone"
                        >
                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llKids"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/abu2"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/hitam222"
                        android:text="Kids"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="@font/tt_norms_bold"
                        android:paddingVertical="8dp"
                        >
                    </TextView>

                    <ImageView
                        android:id="@+id/recKids"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rectangle_2"
                        android:visibility="gone"
                        >
                    </ImageView>

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:background="@color/abu2"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rectangle_4">
                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SUMMER SALES"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/tt_norms_regular"
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Up to 50% off"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:fontFamily="@font/tt_norms_regular"
                    android:gravity="center"
                    android:layout_marginTop="55dp"
                    android:textStyle="bold"
                    >
                </TextView>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/abu2"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleViewShop"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/activity_shop_categories"
                    android:paddingHorizontal="10dp"
                    android:layout_gravity="center"
                    android:background="@color/abu2"
                    >
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>